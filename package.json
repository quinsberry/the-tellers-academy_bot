{
  "name": "the-tellers-academy_bot",
  "version": "1.0.0",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && tsc-alias && tsc-esm-fix --target='build' && npm run copy-assets",
    "build:clean": "rm -rf build && npm run build",
    "copy-assets": "copyfiles -u 1 \"src/**/*.json\" \"src/**/*.png\" \"src/**/*.jpg\" \"src/**/*.jpeg\" \"src/**/*.gif\" build",
    "start": "node build/index.js",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check",
    "test": "vitest"
  },
  "keywords": [],
  "engines": {
    "node": ">=22.17.1"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@axiomhq/pino": "^1.3.1",
    "@grammyjs/parse-mode": "^2.2.0",
    "dotenv": "^17.2.1",
    "google-auth-library": "^10.2.1",
    "google-spreadsheet": "^5.0.2",
    "grammy": "^1.37.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "copyfiles": "^2.4.1",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
